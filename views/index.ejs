<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MY APP</title>

  <!-- external CSS link -->
  <link rel="stylesheet" href="/style.css"/>

</head>
<body>
  <h1 data-position="header">Motivational Quote  Wall</h1>

  <section data-position="add-quote">
    <h2>Add quote</h2>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
  </section>

  <section data-position="update-quote">
    <div>
      <h2>Let's inject some Eric Thomas!</h2>
      <p>Someone likes Grant Cardone, let's replace it with one from Eric Thomas!</p>
      <button id="update-button">Replace Cardone quote</button>
    </div>
  </section>

  <section data-position="delete-quote">
    <div>
      <h2>Remove all quotes by Dan Lok !</h2>
      <p>You found a Dan Lok quote?! Hurry and delete it!</p>
      <button id="delete-button">Delete a Dan Lok quote</button>
    </div>
    <div id="message"></div>
  </section>

  <section data-position="quotes">
    <h2>Quotes</h2>

    <ul class="quotes">
      <% for(var i = 0; i < quotes.length; i++) {%>
      <li class="quote">
        <span><%= quotes[i].name %></span>:
        <span><%= quotes[i].quote %></span>
      </li>
      <% } %>
    </ul>
  </section>

  <script src="/main.js"></script>
</body>
</html>